---
version: '3.8'
services:
  mongodb:
    image: mongo:8.0
    volumes:
      - ./storage/mongodb:/data/db:z
    restart: always

  redis:
    image: redis:7.4-alpine
    volumes:
      - ./storage/redis:/data:z
    restart: always

  hpfeeds3:
    image: ax0n/hpfeeds3:2.1.0
    links:
      - mongodb:mongodb
    ports:
      - "10000:10000"
    restart: always

  mnemosyne:
    image: ax0n/mnemosyne:2.1.0
    env_file:
      - ./config/sysconfig/mnemosyne.env
    links:
      - mongodb:mongodb
      - hpfeeds3:hpfeeds3
    restart: always

  chnserver:
    image: ax0n/chn-server:2.1.0
    volumes:
      - ./storage/chnserver/sqlite:/opt/sqlite:z
      - ./certs:/etc/letsencrypt:z
    env_file:
      - ./config/sysconfig/chnserver.env
    links:
      - mongodb:mongodb
    ports:
      - "80:80"
      - "443:443"
    restart: always
